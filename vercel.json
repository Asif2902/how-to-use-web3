{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"  // Serve static homepage
    },
    {
      "src": "/blog/(.*)",   // Capture any blog-related routes
      "dest": "/index.js"    // Forward to Express server for dynamic content
    }
  ]
}